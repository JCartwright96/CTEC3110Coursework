{% extends 'layout.html.twig' %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
    <div id="page-content-div">
        <form action="{{ action }}" method="post">
            <h2>{{ page_heading_1 }}</h2>
            <fieldset>
                <legend>{{ page_heading_2 }}</legend>
                <br>
                <label for="username">Enter your name:</label>
                <input id="username" name="username" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="password">Enter your password:</label>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="password">Enter your phone number:</label>
                <input id="password" name="phone_number" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="email">Enter your email address:</label>
                <input id="email" name="email" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <input type="submit" value="Create user account >>>">
                <br><br>
                <a href="{{ login_link }}">Already registered? Click here to login</a>
            </fieldset>
        </form>
    </div>
        </div></div></div>
{% endblock %}
