{% extends 'layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="page-content-div">
                    <form action="{{ action }}" method="post">
                        <h2>{{ page_heading_1 }}</h2>
                        <fieldset>
                            <legend>{{ page_heading_2 }}</legend>
                            <br>
                            <label for="email">Enter your email:</label>
                            <input id="email" name="email" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                            <br><br>
                            <label for="password">Enter your password:</label>
                            <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                            <br><br>

                            <input type="hidden" name="{{ nameKey }}" value="{{ name }}">
                            <input type="hidden" name="{{ valueKey }}" value="{{ value }}">

                            <input type="submit" value="Login >>>">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
